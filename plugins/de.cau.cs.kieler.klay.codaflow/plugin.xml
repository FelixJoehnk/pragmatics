<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.kiml.layoutProviders">
      <!-- - - - - - - - - - - - - - - - - - - - - - -  
                      Layout Options
        - - - - - - - - - - - - - - - - - - - - - - -->
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.codaflow.properties.HorizontalAlignment"
            default="NONE"
            id="de.cau.cs.kieler.klay.codaflow.alignNodesHorizontal"
            name="Horizontal Node Alignment"
            type="enum">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="CONNECTIVITY"
            class="de.cau.cs.kieler.klay.codaflow.properties.EdgeLengthStrategy"
            id="de.cau.cs.kieler.klay.codaflow.edgeLengthStrategy"
            name="Ideal Edge Length Strategy"
            type="enum">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            default="MFAS_GLOBAL"
            class="de.cau.cs.kieler.klay.codaflow.properties.CycleTreatment"
            id="de.cau.cs.kieler.klay.codaflow.cycleTreatment"
            name="Cycle Treatment"
            type="enum">
      </layoutOption>

      <layoutOption
            advanced="true"
            default="true"
            appliesTo="parents"
            id="de.cau.cs.kieler.klay.codaflow.repositionHierarchicalPorts"
            name="Reposition Hierarchical Ports"
            type="boolean">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            default="true"
            id="de.cau.cs.kieler.klay.codaflow.dummyPortNodes"
            name="Create Dummy Port Nodes"
            type="boolean">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="2"
            description="Breathing distance of dummy port nodes to their parent node."
            id="de.cau.cs.kieler.klay.codaflow.portDummyBreathe"
            name="Port Dummy Breathe"
            type="float">
      </layoutOption>

      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="true"
            id="de.cau.cs.kieler.klay.codaflow.emphasizeDirection"
            name="Emphasize Direction"
            type="boolean">
            
      <!-- ACA -->
      </layoutOption>
            <layoutOption
            appliesTo="parents"
            default="true"
            id="de.cau.cs.kieler.klay.codaflow.aca.alignCrossHierarchyEdges"
            name="ACA Align Cross-Hierarchy Edges"
            type="boolean">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            default="false"
            id="de.cau.cs.kieler.klay.codaflow.aca.favorLongEdges"
            name="ACA Favor Long Edges"
            type="boolean">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            default="false"
            id="de.cau.cs.kieler.klay.codaflow.aca.postCompaction"
            name="ACA Post Compaction"
            type="boolean">
      </layoutOption>
      
      <!-- Topology Improvement -->
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="120"
            description="The maximum length of a centre S-bend connector segments to attempt to improve (default 120.0)."
            id="de.cau.cs.kieler.klay.cola.moveLimit"
            name="Move Limit"
            type="float">
      </layoutOption>
      
      <!-- - - - - - - - - - - - - - - - - - - - - - - 
                      Layout Algorithms
        - - - - - - - - - - - - - - - - - - - - - - -->
        
      <!-- Codaflow cola -->
      <layoutAlgorithm
            category="de.cau.cs.kieler.cola.category"
            class="de.cau.cs.kieler.klay.codaflow.ColaLayoutProvider"
            id="de.cau.cs.kieler.klay.codaflow.cola"
            name="CoDaFlow_CoLa">
         <knownOption
               default="20"
               option="de.cau.cs.kieler.spacing">
         </knownOption>
         <knownOption
               default="100"
               option="de.cau.cs.kieler.cola.idealEdgeLength">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layoutHierarchy">
         </knownOption>
         <supportedFeature
               feature="PORTS">
         </supportedFeature>
         <supportedFeature
               feature="COMPOUND">
         </supportedFeature>
         <supportedFeature
               feature="CLUSTERS">
         </supportedFeature>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.dummyPortNodes">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.repositionHierarchicalPorts">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.portDummyBreathe">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.edgeLengthStrategy">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.emphasizeDirection">
         </knownOption>
      </layoutAlgorithm>
      
      <!-- aca -->
      <layoutAlgorithm
            category="de.cau.cs.kieler.cola.category"
            class="de.cau.cs.kieler.klay.codaflow.ACALayoutProvider"
            id="de.cau.cs.kieler.klay.codaflow.aca"
            name="CoDaFlow_ACA">
         <knownOption
               option="de.cau.cs.kieler.cola.idealEdgeLength">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.dummyPortNodes">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.cola.considerPreviousPositions">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.alignNodesHorizontal">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.cycleTreatment">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layoutHierarchy">
         </knownOption>
         <supportedFeature
               feature="COMPOUND">
         </supportedFeature>
         <supportedFeature
               feature="CLUSTERS">
         </supportedFeature>
         <supportedFeature
               feature="PORTS">
         </supportedFeature>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.edgeLengthStrategy">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.emphasizeDirection">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.aca.alignCrossHierarchyEdges">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.aca.postCompaction">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.aca.favorLongEdges">
         </knownOption>
      </layoutAlgorithm>
      
      <!-- Codaflow -->
      <layoutAlgorithm
            category="de.cau.cs.kieler.cola.category"
            class="de.cau.cs.kieler.klay.codaflow.CodaflowLayoutProvider"
            id="de.cau.cs.kieler.klay.codaflow"
            name="CoDaFlow Layouter">
         <knownOption
               default="18"
               option="de.cau.cs.kieler.cola.idealEdgeLength">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.dummyPortNodes">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.cola.considerPreviousPositions">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.alignNodesHorizontal">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.cycleTreatment">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layoutHierarchy">
         </knownOption>
         <supportedFeature
               feature="COMPOUND">
         </supportedFeature>
         <supportedFeature
               feature="CLUSTERS">
         </supportedFeature>
         <supportedFeature
               feature="PORTS">
         </supportedFeature>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.edgeLengthStrategy">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.emphasizeDirection">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.aca.alignCrossHierarchyEdges">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.aca.postCompaction">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.aca.favorLongEdges">
         </knownOption>
      </layoutAlgorithm>
      
      <!-- global libavoid -->
      <layoutAlgorithm
            class="de.cau.cs.kieler.klay.codaflow.LibavoidLayoutProvider"
            id="de.cau.cs.kieler.klay.cola.libavoid"
            name="Global Libavoid Layout">
         <supportedFeature
               feature="COMPOUND">
         </supportedFeature>
         <supportedFeature
               feature="CLUSTERS">
         </supportedFeature>
         <supportedFeature
               feature="PORTS">
         </supportedFeature>
         <knownOption
               option="de.cau.cs.kieler.layoutHierarchy">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.cola.considerPreviousPositions">
         </knownOption>
      </layoutAlgorithm>
      
      <!-- Compacting -->
      <layoutAlgorithm
            class="de.cau.cs.kieler.klay.codaflow.CompactingLayoutProvider"
            id="de.cau.cs.kieler.klay.cola.compaction"
            name="Compacting Layout">
      </layoutAlgorithm>
      
      <!-- Topology improvement -->
      <layoutAlgorithm
            class="de.cau.cs.kieler.klay.codaflow.TIOLayoutProvider"
            id="de.cau.cs.kieler.klay.cola.TIPLayout"
            name="TIP Layout">
         <knownOption
               option="de.cau.cs.kieler.borderSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.codaflow.dummyPortNodes">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.spacing">
         </knownOption>
      </layoutAlgorithm>
   </extension>
</plugin>
